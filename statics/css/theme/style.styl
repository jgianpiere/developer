@import 'nib'
@import 'nib/vendor'
@import 'nib/gradients'
vendor-prefixes = o ms moz webkit official

opacity(n)
	opacity n
	if support-for-ie
		filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

/* 
* =======================================================================================================================
* THEME CA 
* =======================================================================================================================
*/

html,body
	max-width 100%

.container
  margin-left auto
  margin-right auto

.header-admin
	height 35px
	background linear-gradient(0, #333, #666)
	color white
	position relative
	padding 0.5em 0px
	font-size 0.7em
#header
	background linear-gradient(#000, #b80000, #f40000)
    box-shadow 0 1px 15px rgba(0, 0, 0, 0.5)
    height 70px
    margin-bottom 20px

.end
	float right !important

.logo
	margin 10px 0 0 0

.mt7
	margin-top 7px

.easing-menu-efect

html,body,*
  max-width 100%

.lat-menu
	position relative
	box-shadow 0 0 15px rgba(0, 0, 0, 0.1) inset
    color #333

.modulo
	margin 15px 0px 0.5em 0px
	margin-left 0px
	text-align left
	text-transform uppercase
	font-size 15px
	color black

.ruta
	box-shadow 0 4px 3px rgba(0, 0, 0, 0.1)
    color #000000
    margin-bottom 20px

.siderbar_content
	box-shadow 0 0 5px rgba(0, 0, 0, 0.1) inset

.submenu-lat-result
	
	&.st-content
		margin-bottom 8px
	
	&.st-content 
		a
			display block
			margin-left 5px
			margin-right 5px
			padding 4px
			text-decoration underline
			border-bottom 1px dotted #d02e10
			font-size 0.85em
			color black
			
			&:hover 
				background none repeat scroll 0 0 #f3f3f3
 